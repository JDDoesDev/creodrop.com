---
import CookieConsent from '../components/CookieConsent.astro';

interface Props {
  title: string;
  description: string;
  canonical: string;
  keywords?: string;
  ogTitle?: string;
  ogDescription?: string;
  ogImage?: string;
  jsonLd?: object[];
}

const {
  title,
  description,
  canonical,
  keywords,
  ogTitle,
  ogDescription,
  ogImage = 'https://creodrop.com/images/og-image.png',
  jsonLd = [],
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- SEO Meta Tags -->
    {keywords && <meta name="keywords" content={keywords} />}
    <meta name="author" content="Creodrop" />
    <meta name="robots" content="index, follow" />
    <link rel="canonical" href={canonical} />

    <!-- Open Graph -->
    <meta property="og:title" content={ogTitle || title} />
    <meta property="og:description" content={ogDescription || description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonical} />
    <meta property="og:site_name" content="Creodrop" />
    <meta property="og:locale" content="en_US" />
    <meta property="og:image" content={ogImage} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content={ogTitle || title} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/images/creo-logo.svg" />
    <link rel="apple-touch-icon" href="/images/apple-touch-icon.png" />

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Outfit:wght@400;500;600&family=Space+Grotesk:wght@500;700&display=swap"
      rel="stylesheet"
    />

    <!-- JSON-LD -->
    {
      jsonLd.map((schema) => (
        <script
          type="application/ld+json"
          set:html={JSON.stringify(schema)}
        />
      ))
    }

    <slot name="head" />
  </head>
  <body>
    <slot />
    <CookieConsent />
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>
